.deletePopup
  will-change transform
  animation onbgr 0.4s forwards
  position fixed
  left 0
  top 0
  display flex
  justify-content center
  align-items flex-end
  width 100%
  height 100%
  z-index 1000
  .confirm-block
    width 100%
    max-width 500px
    border-radius 8px
    padding-bottom 1.5rem
    overflow hidden
    border-top-left-radius 1rem
    border-top-right-radius 1rem
    background-color var(--white-color)
    will-change transform
    animation showDelete 0.4s
  .modal-body
    display flex
    flex-direction column
    align-items center
    padding 1.8rem 1.5rem 2.5rem
    margin 0
    .delete_title
      font-size 1.25rem
      font-weight bold
    .text
      margin 0.8rem 0 2.5rem
      font-size 1rem
      line-height 1.3
      width 80%
      letter-spacing 1px
      text-align center
      color #7e839f
    .delete_icon
      width 5rem
      height 5rem
      display flex
      align-items center
      justify-content center
      border-radius 50%
      border 1px solid var(--active-color)
  .modal-footer
    display flex
    justify-content center
    button
      border none
      outline none
      width 43%
      display flex
      align-items center
      justify-content center
      font-size 0.875rem
      height 3.75rem
      font-weight 500
      padding 0
      border-radius 3rem
      text-transform uppercase
      img
        -webkit-margin-end 0.5rem
        -moz-margin-end 0.5rem
        margin-inline-end 0.5rem
    .no-btn
      background-color var(--sec-color)
      color var(--dark-color)
      -webkit-margin-end 2%
      -moz-margin-end 2%
      margin-inline-end 2%
    .yes-btn
      background-color var(--active-color)
      color var(--white-color)
      -webkit-margin-start 2%
      -moz-margin-start 2%
      margin-inline-start 2%
  .confirm-block-hide
    animation hideDelete 0.3s forwards
.bgr_animation
  animation offbgr 0.4s forwards
@keyframes showDelete
  0% {
    transform translateY(100%)
  }
@keyframes hideDelete
  100% {
    transform translateY(100%)
  }
@keyframes onbgr
  100%
    background-color rgba(0,0,0,0.5)
@keyframes offbgr
  0%
    background-color rgba(0,0,0,0.5)
  100%
    background-color rgba(0,0,0,0)