.shared-switch-wrap
  .shared_swich
    -moz-appearance none
    -webkit-appearance none
    box-sizing content-box
    position relative
    background-color #e4e4f9
    border-radius 3rem
    margin 0
    width 3rem
    height 1.625rem
    outline none
    display flex
    align-items center
    justify-content center
    transition background-color 0.3s 
  .shared_swich:before
    content ''
    display block
    width 1.25rem
    position absolute
    top 50%
    height 1.25rem
    border-radius 50%
    box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.2)
    background-color var(--white-color)
body[style='direction: ltr;']
  .shared-switch-wrap
    .shared_swich:before
      transform: translate(-60%, -50%)
      transition transform 0.5s
    .shared_swich:checked:before
      transform translate(60%, -50%)
      transition transform 0.5s
    .shared_swich:checked
      background-color var(--dark-color)
      transition background-color 0.3s 
body[style='direction: rtl;']
  .shared-switch-wrap
    .shared_swich:before
      transform translate(60%, -50%)
      transition transform 0.5s
    .shared_swich:checked:before
      transform translate(-60%, -50%)
      transition transform 0.5s
    .shared_swich:checked
      background-color var(--dark-color)
      transition background-color 0.3s 