#procedures_list
  width 100%
  display flex
  flex-direction column
  justify-content center
  align-items center
  .procedures-title
    margin 0
    padding 0.8rem 1.5rem 0
    width 100%
    text-align end
    font-size 16px
    font-weight 500
    color #ffffff
  .search-strip
    display flex
    align-items center
    justify-content center
    padding 1rem 0
    .search-wrap
      display flex
      align-items center
      justify-content space-between
      border-radius 1.5rem
      height 3rem
      width 19.5rem
      opacity 0.85
      background-color #ffffff
      .search-input
        width 82%
        margin-inline-start 0.5rem
        text-indent 1rem
        border none
        font-size 14px
        color #bfafe0
        &:active
        &:focus
          outline none
          border none
      .search-img
        margin-inline-end 1.5rem
  .edditional-info
    display flex
  .procedure-wrap
    padding-inline-end 0.7rem
    border-radius 8px
    overflow-y auto
    height 27rem
    width 96%
    background-color white
  .wrap-service:first-child
    border-top none
  .wrap-service
    border-top 1px solid #dedeff
  .service
    height 4rem
    display flex
    padding-top 1rem
    padding-bottom 0.5rem
    flex-direction column
    align-items start
    justify-content space-between
    border-inline-start 6px solid
    padding-inline-start 0.7rem
    h1
      font-size 18px
    .add_wrap
      display inline-block
      width 10%
      height 25px
      img
        width 25px
        height 25px
  .dur-wrap
    margin-inline-end 0.8rem
    img
      opacity 0.5
  .dur-wrap
  .price-wrap
    display flex
    align-items baseline
    font-size 12px
    font-weight 300
    img
      margin-inline-end 0.3rem
  .name
    opacity 0.87
    font-size 16px
    line-height 0.75
    color #222222

