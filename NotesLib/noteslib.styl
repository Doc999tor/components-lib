#notes
  border-radius 7px
  margin 7px 7px
  .note-header
    height 4em
    display flex
    justify-content space-between
    align-items center
    padding 0 14px
    border-bottom 1px solid #dedeff
    background-color: #fff
    span
      font-size 1.5em
      font-weight 700
    .back
      display flex
      align-items center
      justify-content center
      background-color transparent
      border none
      padding 0
      outline none
      font-size 14px
      font-weight 500
      color #4f2da7;
      img
        width 20px
        height 20px
        -webkit-margin-end 0.2rem
        -moz-margin-end 0.2rem
        margin-inline-end 0.2rem
  .note-body
    // overflow hidden
    // overflow-y auto
    background-color: #fff
    .note-list
      display flex
      justify-content space-between
      border-top 1px solid #dedeff
      .left-side
        margin auto 10px
        .date
          display flex
          flex-direction row
          .notes-list-date
            font-size 0.7em
          .notes-list-reminder
            -webkit-margin-start 5px
            -moz-margin-start 5px
            height 15px
        .notes-list-desc
          font-size 1.3em
      .right-side
        display flex
        margin auto 10px
  .note-footer
    background-color: #fff;
    width: 100%;
    height: 4em;
    display: flex;
    justify-content: space-between;
    label
      color #5e36b1;
      font-size 14px
      font-weight 600
  .bot-border
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    margin-bottom 7px
  .top-border
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;