.modal-create-category
  display: block;
  position: fixed;
  top: 44%;
  left: 50%;
  background-color: #ffffff;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 370px;
  box-shadow: 0px 0px 20px 999px #86868685;
  display block
  font-size 28px
  &.hidden
    display none
  .modal-body
    min-height: 290px;
    padding: 25px;
    .modal-title
      display: flex;
      justify-content: center;
      color: #ffa500;
    .select-wrap
      font-size: 18px;
      display: flex;
      justify-content: space-between;
      border-bottom: 2px solid #9d9d9d;
      padding: 10px;
      .category-name
        color #1693ef
      .services-number
        color #9d9d9d
    .search-wrap
      .block-with-notes
        .comment-content
          width 100%
          border-radius 1em
          border 1px solid #000
          outline none
          resize none
          text-align-last right
    .add-category-button
      display block
      width 40%
      min-width 150px
      border 2px solid #2bbddf
      border-radius 25px
      color #2bbddf
      text-align center
      text-decoration none
      float right
      margin-bottom 20px
