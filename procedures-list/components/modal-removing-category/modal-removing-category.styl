.modal-removing-category-wrap
  display none
  &.active
    display block

.modal-removing-category
  position: fixed;
  top: 50%;
  background-color: #fff;
  left: 50%;
  transform: translate(-50%, -50%);
  min-width: 300px;
  box-shadow: 1px 1px 1px 400px #5b5b5bc2;
  &.hidden
    display none

  .warning-block
    border 2px solid grey
  .warning-button
    font-size 30px
    padding 30px 0px
    width 50%
    background-color #fff
  .caution-title
    display flex
    justify-content center
    color #ff9100
  .caution-text
    display flex
    justify-content center
    text-align center
    padding 30px 30px
